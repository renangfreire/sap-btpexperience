<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="CreateUserManuallyDialog"
        title="Dados do usuário"
    >
        <content>
            <l:HorizontalLayout>
                <l:VerticalLayout class="sapUiContentPadding">
                    <VBox >
                        <Label text="Nome Completo" required="true"></Label>
                        <Input placeholder="Texto"></Input>
                    </VBox>
                    <VBox >
                        <Label text="Nome" required="true"></Label>
                        <Input placeholder="Texto"></Input>
                    </VBox>
                    <VBox >
                        <Label text="Email" required="true"></Label>
                        <Input placeholder="Texto"></Input>
                    </VBox>
                    <VBox width="100%">
                        <Label text="Grupo de Acesso" required="true"></Label>
                        <Select
                            width="100%"
                            forceSelection="false"
                            selectedKey="Cliente"
                            autoAdjustWidth="false">
                            <core:Item key="Cliente" text="Cliente" />
                            <core:Item key="Admin" text="Administrador" />
                        </Select>
                    </VBox>
                </l:VerticalLayout>
                    
                <l:VerticalLayout class="sapUiContentPadding">
                    <VBox >
                        <Label text="CPF" required="true"></Label>
                        <Input placeholder="Texto"></Input>
                    </VBox>
                    <VBox >
                        <Label text="Cargo" required="true"></Label>
                        <Input placeholder="Texto" ></Input>
                    </VBox>
                    <VBox >
                        <Label text="Telefone" required="true"></Label>
                        <Input placeholder="Texto"></Input>
                    </VBox>
                    <VBox justifyContent="End" class="sapUiSmallMarginTop" alignItems="End">
                        <Button 
                            id="CreateUser"
                            type="Emphasized"
                            text="Cadastrar usuário"
                            press=".onCloseDialog"
                            />
                    </VBox>
                </l:VerticalLayout>
            </l:HorizontalLayout>
        </content>
    </Dialog>
</core:FragmentDefinition>