
<mvc:View controllerName="com.lab2dev.finalprojectprodev.controller.RegisterNewUsers"
    xmlns:cards="sap.f.cards" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:m="sap.m">
    <Page id="page">
        <VBox height="100%" class="sapUiResponsiveMargin"> 
            <VBox>
                <Title text="Cadastro" level="H1" />
                <Breadcrumbs>
                    <Link text="Cadastro"></Link>
                    <Link text="Novo usuário"></Link>
                </Breadcrumbs>
            </VBox>
  
            <VBox height="auto"  backgroundDesign="Solid" class="sapUiMediumMarginTopBottom">
                <HBox class="sapUiSmallMargin">
                    <Title text="Importar Usuários" level="H2"></Title>
                </HBox>
                <HBox class="sapUiSmallMargin" alignItems="Center">
                       <SearchField width="19rem" class="sapUiTinyMarginEnd" showSearchButton="false" placeholder="Clique e escolha um arquivo .CSV"/>
                    <Button text="Importar" type="Emphasized" press="onOpenImportDialog"/>
                </HBox>
           </VBox>

        <HBox height="100%" >
            <table:Table
                rows="{/Users}"
                selectionMode="MultiToggle"
                paste="onPaste"
                rowMode="Auto">   
                    <table:extension >
                            <m:OverflowToolbar  style="Clear">
                                <m:Title class="sapUiTinyMargin" id="title" text="Users (350)"/>
                           </m:OverflowToolbar>
                        </table:extension>
                    <table:columns>
                        <table:Column width="50%">
                             <m:Label design="Bold" text="Id"></m:Label>
                            <table:template>
                                <m:Text  text="{id}"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="50%">
                            <m:Label design="Bold" text="Name" />
                             <table:template>
                                <m:Text text="{name}"/>
                            </table:template>
                         </table:Column>
                     </table:columns>
            </table:Table>
         </HBox>
        </VBox>

        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Inserir Usuário manualmente"/>
				<Button type="Emphasized" text="Confirmar importação"/>
				<Button class="sap-xp-StandardButton" type="Transparent" text="Reject"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
