<mvc:View xmlns:form="sap.ui.layout.form" controllerName="com.lab2dev.finalprojectprodev.controller.Users"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page id="page" showHeader="false">
        <IconTabBar
            id="idIconTabBarMulti"
            headerBackgroundDesign="Solid"
            selectedKey="RouteUsers"
            select=".onListSelect"
            class="sapUiNoContentPadding"
            >
            <items>
                <IconTabFilter
                    id="iconTabRegistrations"
                    text="Cadastro"
                    >
                    <items>
                        <IconTabFilter
                            id="RegisterNewUsers"
                            key="RouteRegisterNewUsers"
                            text="Novos Usuários"
                            >
                            </IconTabFilter>
                        <IconTabFilter
                            key="RouteRegistrationRequests"
                            text="Aprovação"
                            />
                    </items>
                </IconTabFilter>
                <IconTabFilter
                    key="administration"
                    text="Administração"
                    >
                    <items>
                        <IconTabFilter
                            text="Evento"
                        />
                        <IconTabFilter
                            text="Agendas"
                        />
                        <IconTabFilter
                            text="Sessões"
                        />
                        <IconTabFilter
                            text="Empresas"
                        />
                        <IconTabFilter
                            text="Pacotes"
                        />
                        <IconTabFilter
                            text="Repositórios"
                        />
                        <IconTabFilter
                            key="RouteUsers"
                            text="Usuários"
                        />
                    </items>
                </IconTabFilter>
                <IconTabFilter
                    id="tabBarGamification"
                    key="Gamification"
                    text="Gamificação"
                    >
                    <items>
                        <IconTabFilter
                            text="Tarefas"
                        />
                        <IconTabFilter
                            text="Trilhas"
                        />
                    </items>
                </IconTabFilter>
                <IconTabFilter
                    id="tabBarReports"
                    key="Reports"
                    text="Relatórios"
                    >
                    <items>
                        <IconTabFilter
                            text="Ranking"
                        />
                        <IconTabFilter
                            text="Check in"
                        />
                        <IconTabFilter
                            text="Feedbacks"
                        />
                    </items>
                </IconTabFilter>
                <IconTabFilter
                    id="tabBarRequest"
                    key="Reports"
                    text="Home"
                >
                <items>
                    <IconTabFilter
                        id="Home"
                        key="RouteHome"
                        text="Requisitar Cadastro"
                    />
                    </items>
                </IconTabFilter>
            </items>
        </IconTabBar>

    <ObjectHeader
            title="Administração"
            responsive="true"
            introActive="false"
        >
            <headerContainer>
                <HeaderContainer>
                    <l:VerticalLayout width="100%">
                        <Breadcrumbs
                            class="sapUiTinyMarginTop sapUiLargeMarginBottom"
                            currentLocationText="Perfis"
                        >
                            <Link text="Usuários" />
                        </Breadcrumbs>
                                
                        <m:Title
                            class="sapUiTinyMargin"
                            id="text"
                            text="Filtrar"
                        />
                        <m:OverflowToolbar class="sapUiSmallMarginBottom"  style="Clear" height="3rem" width="100%">
                                     <VBox >
                                        <Label text="Pesquisar" />
                                        <SearchField
                                            placeholder="Pesquisar"
                                            value="{filters>/searchQuery}"
                                        />
                                     </VBox>

                                     <VBox >
                                        <Label text="Empresas" />
                                        <Select width="11.5rem" selectedKey="teste" forceSelection="true" items="{viewDetails>/allCompanyNames}">
                                            <core:Item key="{viewDetails>}" text="{viewDetails>}"></core:Item>
                                        </Select>
                                    </VBox>
                                    <VBox >
                                        <Label text="Cargos" />
                                        <Select width="11.5rem" selectedKey="{filters>/jobTitleSelected}" items="{viewDetails>/allJobTitles}">
                                            <core:Item key="{viewDetails>}" text="{viewDetails>}"></core:Item>
                                        </Select>
                                    </VBox>
                                    <VBox >
                                        <Label text="Grupo" />
                                        <Select width="11.5rem" selectedKey="{filters>/accessGroupSelected}" items="{viewDetails>/allAccessGroups}">
                                            <core:Item key="{viewDetails>}" text="{viewDetails>}"></core:Item>
                                        </Select>
                                    </VBox>
                                    <HBox height="100%" alignItems="End">
                                        <Button text="Iniciar" class="sapUiTinyMarginEnd" type="Emphasized" press="onApplyFilters"></Button>
                                        <Button text="Limpar Filtros" type="Ghost" press="onClearFilters"></Button>
                                    </HBox>
                        </m:OverflowToolbar>
                    </l:VerticalLayout>
                </HeaderContainer>
            </headerContainer>
        </ObjectHeader>
        <content>
            <VBox
                fitContainer="true"
                class="sapUiResponsiveMargin"
                visible="{viewDetails>/tableVisible}"
            >
                <HBox height="100%">
                    <table:Table
                        id="RegistrationRequestsTable"
                        rows="{/Users}"
                        selectionMode="MultiToggle"
                        paste="onPaste"
                        rowMode="Auto"
                    >
                        <table:extension>
                            <m:OverflowToolbar height="3rem">
                                <m:Title
                                    class="sapUiTinyMargin"
                                    id="title"
                                    text="Usuários ({viewDetails>/totalUsers})"
                                />
                                <ToolbarSpacer />
                                <SearchField
                                    placeholder="Pesquisar"
                                    width="13.75rem"
                                    liveChange=".onSearch"
                                />
                            </m:OverflowToolbar>
                        </table:extension>
                        <table:columns>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="ID"
                                />
                                <table:template> 
                                        <m:Text text="{ID}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="Nome Completo"
                                />
                                <table:template>
                                        <m:Text text="{FullName}" visible="{= !${viewDetails>/bEditTableEnabled}}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="Empresa"
                                />
                                <table:template>
                                        <m:Text text="{CompanyName}" visible="{= !${viewDetails>/bEditTableEnabled}}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="Cargo"
                                />
                                <table:template>
                                        <m:Text text="{JobTitle}" visible="{= !${viewDetails>/bEditTableEnabled}}"/>
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="Grupo selecionado"
                                />
                                <table:template>
                                        <m:Text text="{AccessGroup}" visible="{= !${viewDetails>/bEditTableEnabled}}"/>
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="E-mail"
                                />
                                <table:template>
                                        <m:Text text="{Email}" wrapping="false" visible="{= !${viewDetails>/bEditTableEnabled}}"/>
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <m:Label
                                    design="Bold"
                                    text="CPF"
                                />
                                <table:template>
                                     <m:Text text="{CPF}" visible="{= !${viewDetails>/bEditTableEnabled}}"/>
                                </table:template>
                            </table:Column>
                        </table:columns>
                    </table:Table>
                </HBox>
            </VBox>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="CreateUserManuallyDialog"
                    type="Emphasized"
                    icon="sap-icon://excel-attachment"
                    iconFirst="false"
                    text="Exportar Excel"
                    press=".exportExcelFile"
                />
                <Button
                    id="ConfirmUserImportDialog"
                    type="Emphasized"
                    text="Adicionar Usuários"
                    press=".onNavToRegisterNewUsers"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
